{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,

    "esModuleInterop": true,

    "outDir": "./bin",
    "rootDir": "./src",
    "removeComments": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
